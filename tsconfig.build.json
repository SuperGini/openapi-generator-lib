{
  "compilerOptions": {
    "target": "es2020",               // Or es2020, esnext - choose based on your Angular project's compatibility
    "module": "esnext",               // Or commonjs - choose based on what bundlers prefer (esnext is common)
    "declaration": true,              // Crucial: Generate .d.ts files
    "outDir": "typescriptgenerated",  // Output compiled JS/DTS back into the same folder
    "rootDir": "typescriptgenerated", // Root of your source TS files
    "strict": true,                   // Enable all strict type-checking options
    "esModuleInterop": true,          // Helps with default imports
    "experimentalDecorators": true,   // Essential for Angular decorators
    "emitDecoratorMetadata": true,    // Essential for Angular DI
    "skipLibCheck": true,              // Good for avoiding issues with node_modules types
    "moduleResolution": "node"
  },
  "include": [
    "typescriptgenerated/**/*.ts"     // Include all .ts files within typescriptgenerated
  ],
  "exclude": [
    "node_modules"
  ]
}